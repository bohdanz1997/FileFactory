@model FileObmen.Models.ViewModels.UploadViewModel
@using FileObmen.Tools;

@{
    ViewBag.Title = "Загрузка";
    
}

@section styles {
    <link rel="stylesheet" href="~/Scripts/plupload/plupload.css" />
    <link rel="stylesheet" href="~/Content/cut-header.css" />
}

<div class="plupload-wrap">
    <div class="col-sm-10 col-sm-push-1">
        <div class="row">
            <div class="box">
                <div class="box-content">
                    <input type="hidden" id="guidData"/>
                    <div id="fileNames"></div>

                    <div class="pull-right">
                        <button id="cancelUpload" class="no-display btn btn-danger">Остановить загрузку</button>
                        <button id="uploadMore" class="no-display btn btn-default">Загрузить еще</button>
                    </div>
                    <div class="clearfix"></div>

                    <div class="upload-title">Файлы не выбраны</div>
                    <div class="upload-limit">Вы можете еще загрузить @Html.FileSize(Model.UserPlan.Balance)</div>

                    <div id="container" class="upload-container">
                        <div id="pluploadBtns">
                            <button id="pickfiles" class="btn btn-lg btn-info">Выбрать файлы</button>
                            <button id="uploadfiles" class="btn btn-lg btn-success">Загрузить файлы</button>
                        </div>
                    </div>

                    <div id="dropContainer" class="drop-container plupload_wrapper plupload_container plupload_view_thumbs up-fileListBackground">
                        <div class="files-notify">Выбранные файлы будут показаны здесь</div>
                        <ul id="fileList" class="plupload_filelist_content ui-sortable"></ul>
                    </div>

                    <div id="progressBarContainer" class="progress-bar-container no-display">
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" id="progresss-file"
                                 role="progressbar" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <div id="uploadInfo" class="upload-info"></div>
                        <div class="progress">
                            <div class="progress-bar progress-bar-success" id="progresss-queue"
                                 role="progressbar" aria-valuemin="0" aria-valuemax="100">
                            </div>
                        </div>
                        <div id="uploadFileName"></div>
                    </div>

                    <div id="fileLinksBlock" class="file-links-block no-display">
                        <div class="msg-links">Это ссылки на файлы</div>
                        <div class="text-center">
                            <div id="fileLinks"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

@section scripts {
    <script src="~/Scripts/plupload/plupload.full.min.js"></script>
    <script src="~/Scripts/plupload/uploader.js"></script>
    <script src="~/Scripts/clipboard.min.js"></script>
    <script src="~/Scripts/modal-init.js"></script>
    <script>new Clipboard('#copy-button');</script>
}

@using FileObmen.Tools
@model FileObmen.Models.Entities.File

@{
    ViewBag.Title = "Загрузка файла";
    string file;
    if (Model != null)
    {
        file = "/Content/icons/" + Model.Description;
    }
    else
    {
        file = "/Content/images/fileExpired.png";
    }
}

@section styles {
    <link rel="stylesheet" href="~/Content/cut-header.css" />
}

<div class="file-download-wrap">
    <div class="col-sm-10 col-sm-push-1">
        <div class="box">
            <div class="box-content">
                <div class="file-container">
                    <div class="text-center">
                        @if (Model != null)
                        {
                            <h2 class="file-name">@Model.Name (@Html.FileSize(Model.Size))</h2>
                            <div class="row">
                                <div class="file-icon-container">
                                    <img src="@file" width="175" height="175" alt="Alternate Text" />
                                </div>
                            </div>
                            <div class="row">
                                @Html.ActionLink("Скачать", "GetFile", "File",
                                new { sha = Model.Sha }, new { @class = "btn btn-primary btn-lg btn-wide" })
                            </div>
                        }
                        else
                        {
                            <h2 class="file-name">Упс, такого файла еще не загружено</h2>
                            <div class="row">
                                <div class="file-icon-container">
                                    <img src="@file" width="175" height="175" alt="Alternate Text" />
                                </div>
                            </div>
                            <h2 class="file-not-found">Файл не найден</h2>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@model bool

@{
    string SiteName = ViewBag.Title = "Главная";
    if (Request != null)
    {
        ViewBag.Title = "FileFactory";
        SiteName = "FileFactory";
    }
}

@section styles {
    <link rel="stylesheet" href="~/Content/cut-header.css"/>
}

<div class="header-wrap">
    <div class="container">
        <div class="main-top text-center">
            <div class="text-top-big">Добро пожаловать на @SiteName</div>
            <div class="text-top-small">Это самый легкий способ отправлять и делится файлами</div>
        </div>
        <div class="col-lg-8 col-lg-push-2">
            <div class="box block-welcome-wrap">
                <div class="box-content block-welcome">
                    @if (Model)
                    {
                        <div class="text-center">
                            <span class="line3">Добро пожаловать, ваш аккаунт готов</span>
                            @Html.ActionLink("Загружайте файлы", "Plupload", "File",
                            null, new { @class = "btn btn-success btn-lg btn-wide" })
                        </div>
                    }
                    else
                    {
                        <div class="get-started text-center">
                            <div class="row">
                                <span class="line1">Впервые на нашем сайте?</span>
                                <span class="line2">Начните работу с</span>
                                <span class="line3">Бесплатным 1GB аккаунтом</span>
                                @Html.ActionLink("Зарегистрироватся", "Register", "Account",
                                null, new { @class = "btn btn-primary btn-lg btn-wide" })
                            </div>
                            <br />
                            <br />
                            <div class="row">
                                <span class="line1">Хотите вернутся?</span>
                                @Html.ActionLink("Войти", "Login", "Account",
                                null, new { @class = "btn btn-success btn-lg btn-wide" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="clearfix"></div>
    </div>
</div>

<div class="clearfix"></div>

<div class="home-main">
    <div class="col-sm-10 col-sm-push-1">
        <div class="container intro">
            <div class="row text-center">
                <div class="title-new-center">С нами загружать и делится файлами - просто!</div>

                <div class="row header">

                    <div class="col-sm-12 col-md-4">
                        <div class="box">
                            <div class="box-content">
                                <img src="~/Content/images/Main1.png" width="207" height="171" alt="Alternate Text" />
                                <span>Выбирайте&nbsp;и&nbsp;загружайте&nbsp;файлы</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-4">
                        <div class="box">
                            <div class="box-content">
                                <img src="~/Content/images/Main3.png" width="286" height="171" alt="Alternate Text" />
                                <span>Получите&nbsp;ссылку&nbsp;на&nbsp;файл</span>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-4">
                        <div class="box">
                            <div class="box-content">
                                <img src="~/Content/images/Main2.png" width="163" height="169" alt="Alternate Text" />
                                <span>Поделитесь&nbsp;ссылкой</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
</div>

<div class="container">
    <div class="background-side">
        <div class="col-sm-10 col-sm-push-1">
            <div class="title-new-center">Особенности загрузки и совместного использования</div>

            <div class="row">

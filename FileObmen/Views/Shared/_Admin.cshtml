@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles{
    @RenderSection("styles", false)
    <link rel="stylesheet" href="~/Content/cut-header.css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
}

<div id="sidebar-left" class="col-lg-2 col-sm-1 col-md-2" style="border-right: 1px solid #dbdee0;">

    <div class="sidebar-nav nav-collapse collapse navbar-collapse">
        <ul class="nav main-menu">
            <li><a href="@Url.Action("Stats", "Admin")"><i class="fa fa-bar-chart-o"></i><span class="hidden-sm text">Статистика</span></a></li>
            <li><a href="@Url.Action("Files", "Admin")"><i class="fa fa-bar-chart-o"></i><span class="hidden-sm text">Файлы</span></a></li>
            <li><a href="@Url.Action("Users", "Admin")"><i class="fa fa-bar-chart-o"></i><span class="hidden-sm text">Пользователи</span></a></li>
            <li><a href="@Url.Action("Search", "Admin")"><i class="fa fa-bar-chart-o"></i><span class="hidden-sm text">Поиск файлов</span></a></li>
        </ul>
    </div>
</div>

<div class="col-lg-10 col-sm-11 col-md-10">
    <div class="row">
        <div class="col-lg-12">
            <div style="min-height: 400px">
                <div class="admin-body">
                    <div class="box">
                        <div class="box-content">
                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    @RenderSection("scripts", false)
    <script src="~/Scripts/modal-init.js"></script>
}

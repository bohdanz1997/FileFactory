@model FileObmen.Models.ViewModels.ChangePassModel

@{
    ViewBag.Title = "Изменить пароль";
}

<div class="col-sm-10 col-sm-push-1">
    <div class="col-md-6">
        <div class="box">
            <div class="box-header">
                <h2><i class="fa fa-pencil"></i>Изменение пароля</h2>
            </div>
            <div class="box-content">
                @using (Html.BeginForm("ChangePassword", "Profile", FormMethod.Post,
    new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()

                    <div class="form-group">
                        <div class="input-group col-sm-12">
                            @Html.LabelFor(m => m.OldPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.OldPassword)
                    </div>

                    <div class="form-group">
                        <div class="input-group col-sm-12">
                            @Html.LabelFor(m => m.NewPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.NewPassword)
                    </div>

                    <div class="form-group">
                        <div class="input-group col-sm-12">
                            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>

                    <input type="submit" class="btn btn-primary" value="Подтвердить" />
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
